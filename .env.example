# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Azure PostgreSQL Configuration (Write Database)
POSTGRES_HOST=lazarus-postgres.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=lazarus_patients
POSTGRES_USER=lazarus_admin
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_SSL=true
DATABASE_URL=postgresql://lazarus_admin:your-postgres-password@lazarus-postgres.postgres.database.azure.com:5432/lazarus_patients?sslmode=require

# Azure Cosmos DB Configuration (MongoDB API - Read Database for MVP1)
COSMOSDB_URI=mongodb://lazarus-cosmosdb:your-cosmos-key@lazarus-cosmosdb.mongo.cosmos.azure.com:10255/lazarus_patients_read?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@lazarus-cosmosdb@
COSMOSDB_KEY=your-cosmos-primary-key

# MongoDB Atlas Configuration (for future migration)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/lazarus_patients_read?retryWrites=true&w=majority

# Azure Redis Cache Configuration
REDIS_HOST=lazarus-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-access-key
REDIS_DB=0
REDIS_TLS=true
REDIS_CONNECTION_STRING=lazarus-redis.redis.cache.windows.net:6380,password=your-redis-access-key,ssl=True,abortConnect=False

# Azure Service Bus Configuration (MVP1)
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://lazarus-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-service-bus-key
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://lazarus-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-service-bus-key

# Kafka Configuration (for future use)
KAFKA_BROKERS=localhost:9092
KAFKA_ENABLED=false

# Azure Storage Configuration (for documents)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=lazarusstorage;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=patient-documents
AZURE_STORAGE_ACCOUNT_NAME=lazarusstorage
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key

# External Services (Azure Container Instances or AKS)
AUDIT_SERVICE_URL=https://lazarus-audit.azurecontainer.io
BILLING_SERVICE_URL=https://lazarus-billing.azurecontainer.io
PROCEDURES_SERVICE_URL=https://lazarus-procedures.azurecontainer.io
RULES_SERVICE_URL=https://lazarus-rules.azurecontainer.io

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key;IngestionEndpoint=https://brazilsouth-1.in.applicationinsights.azure.com/;LiveEndpoint=https://brazilsouth.livediagnostics.monitor.azure.com/

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=lazarus-rg
AZURE_LOCATION=Brazil South
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# MCP Configuration
MCP_ENABLED=true

# Feature Flags
USE_COSMOSDB=true
USE_MONGODB_ATLAS=false
USE_SERVICE_BUS=true
USE_KAFKA=false

